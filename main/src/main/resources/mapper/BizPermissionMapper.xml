<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.mapper.BizPermissionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.mall.model.BizPermission">
        <id column="id" property="id" />
        <result column="parent_id" property="parentId" />
        <result column="name" property="name" />
        <result column="level" property="level" />
        <result column="icon" property="icon" />
        <result column="type" property="type" />
        <result column="url" property="url" />
        <result column="method" property="method" />
        <result column="status" property="status" />
        <result column="biz_id" property="bizId" />
        <result column="create_userid" property="createUserid" />
        <result column="create_time" property="createTime" />
        <result column="update_userid" property="updateUserid" />
        <result column="update_time" property="updateTime" />
        <result column="deleted" property="deleted" />
        <result column="version" property="version" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, parent_id, name, level, icon, type, url, method, status, biz_id, create_userid, create_time, update_userid, update_time, deleted, version
    </sql>

    <resultMap id="permission_map" type="com.mall.model.BizPermission">
        <id column="id" property="id"/>
        <result column="url" property="url"/>
        <result column="method" property="method"/>
        <collection property="roleList" javaType="com.mall.model.BizRole">
            <id column="id" property="id"/>
            <result column="name" property="name"/>
        </collection>
    </resultMap>
    
    <select id="getPermissionList" resultMap="permission_map">
        SELECT p.id,p.name,p.url,p.method,r.id as roleid,r.name as rolename
        from u_biz_role_permission rp
        LEFT JOIN u_biz_permission p ON rp.permission_id = p.id
        LEFT JOIN roler r on rp.role_id = r.id where rp.biz_id = #{bizId}
    </select>

</mapper>
